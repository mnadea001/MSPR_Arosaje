{% block title %}Botanist{% endblock %}

{% block body %}
    <h1>Botanist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ botanist.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ botanist.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ botanist.roles ? botanist.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ botanist.password }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ botanist.username }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ botanist.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ botanist.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ botanist.country }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ botanist.createdAt ? botanist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
